{
  "npmScope": "@shopify",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "test:all",
          "test",
          "test:dev",
          "lint",
          "build"
        ]
      }
    }
  },
  "targetDefaults": {
    "test:all": {
      "dependsOn": [
        "^test:all"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "test:dev": {
      "dependsOn": [
        "^test:dev"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "clean": {
      "dependsOn": [
        "^clean"
      ]
    },
    "prebuild": {
      "dependsOn": [
        "^prebuild"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "prepublishOnly": {
      "dependsOn": [
        "^prepublishOnly"
      ]
    },
    "preversion": {
      "dependsOn": [
        "^preversion"
      ]
    },
    "postversion": {
      "dependsOn": [
        "^postversion"
      ]
    }
  },
  "defaultBase": "main"
}
