{
  "name": "@shopify/shopify-app-express",
  "version": "1.0.0-rc3",
  "description": "Shopify Express Middleware - to simplify the building of Shopify Apps with Express",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/shopify-app-express.git"
  },
  "bugs": {
    "url": "https://github.com/Shopify/shopify-app-express/issues"
  },
  "homepage": "https://github.com/Shopify/shopify-app-express",
  "author": "Shopify Inc.",
  "license": "MIT",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "require": "./src/index.js",
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./session-storage/*": {
      "import": "./session-storage/*.js",
      "require": "./session-storage/*.js",
      "types": "./session-storage/*.d.ts"
    }
  },
  "prettier": "@shopify/prettier-config",
  "scripts": {
    "test:all": "jest",
    "test": "jest --selectProjects package",
    "test:dev": "jest --selectProjects package lint",
    "test:session_storage": "jest --selectProjects session_storage",
    "lint": "jest --selectProjects lint",
    "clean": "yarn tsc --build --clean",
    "prebuild": "yarn tsc --build --clean",
    "build": "tsc",
    "prepublishOnly": "yarn run build",
    "preversion": "yarn run test",
    "postversion": "git push origin main --follow-tags && echo \"Log in to shipit to deploy version $npm_package_version\""
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "shopify",
    "node",
    "express",
    "app",
    "graphql",
    "rest",
    "webhook",
    "Admin API",
    "Storefront API"
  ],
  "dependencies": {
    "@shopify/shopify-api": "^6.0.0-rc9",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^42.0.1",
    "@shopify/prettier-config": "^1.1.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/pg": "^8.6.5",
    "@types/sqlite3": "^3.1.8",
    "eslint": "^8.24.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-runner-eslint": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.11.0",
    "mysql2": "^2.3.3",
    "pg": "^8.8.0",
    "prettier": "^2.7.1",
    "redis": "^4.4.0",
    "sqlite3": "^5.0.8",
    "supertest": "^6.3.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "files": [
    "**/*.d.ts",
    "**/*.d.ts.map",
    "**/*.js",
    "**/*.js.map",
    "!bundle/*",
    "!node_modules"
  ]
}
